{
  "extends": "./tsconfig.json",
  "include": [
    "web/next-env.d.ts",
    "web/**/*.d.ts",
    "web/**/*.ts",
    "web/**/*.tsx",
    "core/**/*.ts",
    "core/**/*.tsx"
  ],
  "exclude": [
    "**/__tests__/**",
    "**/*.test.*",
    "**/*.spec.*",
    "web/jest.config.*",
    "web/jest.setup.*",
    "web/tailwind.config.*",
    "web/next.config.*",
    "web/postcss.config.*",
    "node_modules",
    ".next",
    "dist",
    "build"
  ],
  "compilerOptions": {
    "types": ["node"]     
  }
}
