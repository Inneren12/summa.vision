{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noEmit": true,

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",

    "baseUrl": ".",
    "paths": {
      "@core/*": ["core/*"],
      "@web/*": ["web/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "**/dist", "**/build", ".next"]
}
